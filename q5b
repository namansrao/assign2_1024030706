#include <iostream>
using namespace std;

class TriDiagonalMatrix {
private:
    int *A;
    int n;

public:
    TriDiagonalMatrix(int n) {
        this->n = n;
        A = new int[3*n-2];
    }

    void set(int i, int j, int x) {
        if (i-j == 1)
            A[i-2] = x;
        else if (i-j == 0)
            A[n-1+i-1] = x;
        else if (i-j == -1)
            A[2*n-1+i-1] = x;
    }

    int get(int i, int j) {
        if (i-j == 1)
            return A[i-2];
        else if (i-j == 0)
            return A[n-1+i-1];
        else if (i-j == -1)
            return A[2*n-1+i-1];
        return 0;
    }

    void display() {
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= n; j++) {
                cout << get(i, j) << " ";
            }
            cout << endl;
        }
    }

    ~TriDiagonalMatrix() {
        delete[] A;
    }
};

int main() {
    int n;
    
    cout << "Enter the dimension of the tri-diagonal matrix: ";
    cin >> n;
    
    TriDiagonalMatrix tdm(n);
    
    cout << "Enter elements for the tri-diagonal matrix:" << endl;
    
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= n; j++) {
            if (abs(i - j) <= 1) {
                int x;
                cout << "Element [" << i << "," << j << "]: ";
                cin >> x;
                tdm.set(i, j, x);
            }
        }
    }
    
    cout << "\nTri-Diagonal Matrix:" << endl;
    tdm.display();
    
    return 0;
}
