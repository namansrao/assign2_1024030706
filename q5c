#include <iostream>
using namespace std;

class LowerTriangular {
private:
    int *A;
    int n;

public:
    LowerTriangular(int n) {
        this->n = n;
        A = new int[n*(n+1)/2];
    }

    void set(int i, int j, int x) {
        if (i >= j)
            A[i*(i-1)/2 + j-1] = x;
    }

    int get(int i, int j) {
        if (i >= j)
            return A[i*(i-1)/2 + j-1];
        return 0;
    }

    void display() {
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= n; j++) {
                if (i >= j)
                    cout << A[i*(i-1)/2 + j-1] << " ";
                else
                    cout << "0 ";
            }
            cout << endl;
        }
    }

    ~LowerTriangular() {
        delete[] A;
    }
};

int main() {
    int n;
    
    cout << "Enter the dimension of the lower triangular matrix: ";
    cin >> n;
    
    LowerTriangular lt(n);
    
    cout << "Enter elements for the lower triangular matrix:" << endl;
    
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            int x;
            cout << "Element [" << i << "," << j << "]: ";
            cin >> x;
            lt.set(i, j, x);
        }
    }
    
    cout << "\nLower Triangular Matrix:" << endl;
    lt.display();
    
    return 0;
}
