#include <iostream>
using namespace std;

int findMissingBinary(int arr[], int n) {
    int left = 0, right = n - 2;
    while (left <= right) {
        int mid = (left + right) / 2;
        if (arr[mid] == mid + 1) {
            left = mid + 1;
        } else {
            right = mid - 1;
        }
    }
    return left + 1;
}

int main() {
    int n;
    
    cout << "Enter the total count (n): ";
    cin >> n;
    
    int arr[n-1];
    cout << "Enter " << (n-1) << " sorted elements (one missing from 1 to " << n << "): ";
    for(int i = 0; i < n-1; i++) {
        cin >> arr[i];
    }
    
    int missing = findMissingBinary(arr, n);
    cout << "Missing Number (Binary Search): " << missing << endl;
    
    return 0;
}
