#include <iostream>
using namespace std;

void reverse(char str[]) {
    int i = 0, j = 0;
    char temp;
    while (str[j] != '\0') j++;
    j--;
    while (i < j) {
        temp = str[i];
        str[i] = str[j];
        str[j] = temp;
        i++;
        j--;
    }
}

int main() {
    char str[100];
    
    cout << "Enter a string: ";
    cin.getline(str, 100);
    
    cout << "Original string: " << str << endl;
    
    reverse(str);
    
    cout << "Reversed string: " << str << endl;
    
    return 0;
}
