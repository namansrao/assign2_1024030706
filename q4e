#include <iostream>
using namespace std;

void toLowercase(char str[]) {
    int i = 0;
    while (str[i] != '\0') {
        if (str[i] >= 'A' && str[i] <= 'Z') {
            str[i] = str[i] + 32;
        }
        i++;
    }
}

int main() {
    char str[100];
    
    cout << "Enter a string: ";
    cin.getline(str, 100);
    
    cout << "Original string: " << str << endl;
    
    toLowercase(str);
    
    cout << "Lowercase string: " << str << endl;
    
    return 0;
}
